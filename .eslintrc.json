{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/extensions": ["error", "ignorePackages"],
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "no-plusplus": "off",
    "max-len": ["error", { "code": 120 }],
    "linebreak-style": "off",
    "eol-last": ["error", "always"],
    "indent": ["error", 2],
    "no-unused-vars": "off",  
    "comma-dangle": ["error", "always-multiline"]
  }
}